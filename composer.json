{
    "name": "rameva/joomla-hosting-component",
    "description": "Hosting management component for Joomla 5.x-6.x",
    "type": "joomla-component",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Sergey Bunin",
            "email": "info@rameva.ru",
            "homepage": "https://rameva.ru"
        }
    ],
    "require": {
        "php": "^8.2",
        "guzzlehttp/guzzle": "^7.8",
        "phpoffice/phpword": "^1.2",
        "tecnickcom/tcpdf": "^6.7",
        "firebase/php-jwt": "^6.10"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Joomla\\Component\\Hosting\\": "src/",
            "Rameva\\Hosting\\": "libraries/hosting/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}